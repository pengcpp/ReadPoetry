<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_background">


    <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="420dp"
            android:background="@drawable/abc_popup_background_mtrl_mult"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">


        <ImageView
                android:id="@+id/logo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_light"/>


        <TextView
                android:id="@+id/name_text"
                android:layout_below="@+id/logo_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="26dp"
                android:textColor="@android:color/black"
                android:text="@string/app_lily"
                android:layout_centerHorizontal="true"/>

        <LinearLayout
                android:id="@+id/usr_layout"
                android:layout_below="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="用户名:"
                    android:layout_marginLeft="20dp"
                    />

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/usr_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:text=""
                    android:textSize="17dp"
                    app:baseColor="@android:color/black"
                    app:primaryColor="?colorAccent"
                    app:singleLineEllipsis="true"/>
        </LinearLayout>


        <LinearLayout
                android:id="@+id/password_layout"
                android:layout_below="@+id/usr_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="密    码:"
                    android:layout_marginLeft="20dp"
                    />

            <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/password_edit"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:inputType="textPassword"
                    android:textSize="17dp"
                    app:baseColor="@android:color/black"
                    app:primaryColor="?colorAccent"
                    app:singleLineEllipsis="true"/>
        </LinearLayout>

        <TextView
                android:id="@+id/register_text"
                android:layout_below="@+id/password_layout"
                android:gravity="right"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="14dp"
                android:text="注册"/>

        <LinearLayout
                android:layout_below="@+id/register_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

            <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/common_btn_big_radius_default"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="#585858"
                    app:mrl_rippleDuration="350"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true">

                <Button
                        android:id="@+id/ripple_button_back"
                        android:layout_width="match_parent"
                        android:background="@drawable/common_btn_big_radius_default"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="返回"/>

            </com.balysv.materialripple.MaterialRippleLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/common_btn_big_radius_default"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleColor="#585858"
                    app:mrl_rippleDuration="350"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true">

                <Button
                        android:id="@+id/ripple_button_confirm"
                        android:layout_width="match_parent"
                        android:background="@drawable/common_btn_big_radius_default"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="确认"/>

            </com.balysv.materialripple.MaterialRippleLayout>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>