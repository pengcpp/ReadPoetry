<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:circleprogress="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_5dp"
        android:paddingRight="@dimen/margin_5dp">

    <com.cpp.readpoetry.view.CircleProgress
            android:id="@+id/progress"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            circleprogress:color1="@color/material_orange"
            circleprogress:color2="@color/material_cyan"
            circleprogress:color3="@color/material_red"
            android:visibility="visible"/>

</RelativeLayout>
